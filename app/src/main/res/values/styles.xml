<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Стиль загрузочного экрана -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>
    
    <!-- Базовый стиль приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <!-- Стиль для диалоговых (всплывающих) окон -->
    <style name="SemiTransparentDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стиль для заголовков TextView -->
    <style name="TitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poe_vertical_bold</item>
    </style>

    <!-- Стиль для текста в TextView-->
    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/play_bold</item>
    </style>

    <!-- Стиль для полей ввода EditText -->
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_white</item>
        <item name="fontFamily">@font/play_bold</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24dp</item>
    </style>
    
    <!-- Стиль для кнопок Button-->
    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
